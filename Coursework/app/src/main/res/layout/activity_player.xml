<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Previous"
                android:id="@+id/prevButton"
                android:onClick="onPreviousClick"
                android:enabled="false" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/playPauseButton"
                android:onClick="onPlayPauseClick"
                android:text="Play"
                android:enabled="false" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NEXT"
                android:id="@+id/nextButton"
                android:onClick="onNextClick"
                android:enabled="false" />
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BROWSE"
            android:id="@+id/browseButton"
            android:layout_gravity="center_horizontal"
            android:onClick="onBrowseClick" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton android:id="@+id/radio_repeatNone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Repeat None"
                android:onClick="onRepeatSettingClick"
                android:checked="true" />
            <RadioButton android:id="@+id/radio_repeatOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Repeat One"
                android:onClick="onRepeatSettingClick"/>
            <RadioButton android:id="@+id/radio_repeatAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Repeat All"
                android:onClick="onRepeatSettingClick"/>
        </RadioGroup>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shuffle"
            android:id="@+id/shuffleCheck"
            android:checked="false"
            android:onClick="onShuffleSettingClick" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Currently Playing"
            android:id="@+id/textView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/currentlyPlaying" />

    </LinearLayout>

</RelativeLayout>
